<aside>
    <div class="detail-container">
        <h3 class="h5">Détails</h3>
        <div class="details">
            <small>Crée le {{ book.createdAt|format_datetime(locale='fr') }}</small>
            {% if book.updatedAt != null %}
                <small>Dernière mise à jour le {{ book.updatedAt|format_datetime(locale='fr') }} </small>
            {% endif %}
        </div>
    </div>
    <div class="action-container">
        <h3 class="h5">Actions</h3>
        <div class="actions">
            <a 
                href="{{ path('docs_book_new_chapter', {
                    id: book.id,
                    slug: book.slug
                }) }}" 
                id="new-chapter"
                class="action-link" 
                title="Lien pour créer un nouveau chapitre"
            ><i class="bi bi-folder-plus"></i>&nbsp;Nouveau chapitre</a>
            <a                 
                href="{{ path('docs_book_new_page', {
                    id: book.id,
                    slug: book.slug
                }) }}" 
                id="new-page"
                class="action-link" 
                title="Lien pour créer une nouvelle page"
            ><i class="bi bi-file-plus"></i>&nbsp;Nouvelle page</a>
            <hr>
            <a 
                href="{{ path('docs_book_edit', {
                    id: book.id,
                    slug: book.slug
                }) }}"
                href="#"
                id="edit-book" 
                title="Lien pour éditer le livre" 
                class="action-link"
            ><i class="bi bi-pencil"></i>&nbsp;Éditer</a>
            <a 
                href="#" 
                id="delete-book" 
                title="Lien pour supprimer le livre" 
                class="action-link"
            ><i class="bi bi-trash"></i>&nbsp;Supprimer</a>
        </div>
    </div>
</aside>