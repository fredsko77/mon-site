<aside>
    <div class="detail-container">
        <h3 class="h5">Détails</h3>
        <div class="details">
            <small>Crée le {{ shelf.createdAt|format_datetime(locale='fr') }}</small>
            {% if shelf.updatedAt != null %}
                <small>Dernière mise à jour le {{ shelf.updatedAt|format_datetime(locale='fr') }} </small>
            {% endif %}
        </div>
    </div>
    {% if is_granted('shelf_action', shelf) %}
        <div class="action-container">
            <h3 class="h5">Actions</h3>
            <div class="actions">
                <a 
                    href="{{ path('docs_shelf_new_book', {
                        id: shelf.id,
                        slug: shelf.slug
                    }) }}" 
                    id="new-book"
                    class="action-link" 
                    title="Lien pour créer un nouveau livre"
                ><i class="bi bi-journal-plus"></i>&nbsp;Nouveau livre</a>
                <hr>
                <a 
                    href="{{ path('docs_shelf_edit', {
                        id: shelf.id
                    }) }}"
                    id="edit-shelf" 
                    title="Lien pour éditer l'étagère" 
                    class="action-link"
                ><i class="bi bi-pencil"></i>&nbsp;Éditer</a>
                <a 
                    href="{{ path('docs_shelf_delete', {
                        id: shelf.id,
                        slug: shelf.slug
                    }) }}" 
                    id="delete-shelf" 
                    title="Lien pour supprimer l'étagère" 
                    class="action-link"
                    onclick="deleteObject(event);"
                ><i class="bi bi-trash"></i>&nbsp;Supprimer</a>
            </div>
        </div>
    {% endif %}    
</aside>