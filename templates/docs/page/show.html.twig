{% extends "docs/layouts/page.html.twig" %}

{% block main %}
    <section class="container-fluid" id="page-show-book">
        {% include "docs/page/sidebar.html.twig" %}        
        <section class="section">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('docs_shelf_index') }}">Étagères</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('docs_shelf_show', {
                                id: page.book.shelf.id,
                                slug: page.book.shelf.slug
                            }) }}">{{ page.book.shelf.title }}</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a href="{{ path('docs_book_show', {
                                id: page.book.id,
                                slug: page.book.slug
                            }) }}">{{ page.book.title }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            {{ page.title }}
                        </li>
                    </ol>
                </nav>
                <h1 class="h3">{{ page.title }}</h1>
                <div class="page-container">                
                    <div class="content-container">
                        {{ page.content|raw }}
                        <pre>
                            {{ dump(getClass(page)) }}
                        </pre>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}

{% block css %}    
    <link rel="stylesheet" href="{{ asset('css/docs/styles.css') }}">
{% endblock %}

{% block js %}
    <script>
        const deleteObject = (event) => {
            event.preventDefault();
            const url = event.target.href;
            const answer = confirm('Toutes les données supprimées seront perdues définitivement? Êtes-vous sûr de poursuivre cette action?');

            if (answer === true) {
                axios
                    .delete(url)
                    .then(({ status, headers }) => {
                        if (status === 204) {
                            if (headers.hasOwnProperty('location')) {
                                flash('Supprimé avec succcès');
                                setTimeout(() => window.location = headers.location, 3000);
                            }
                        }
                    })
                    .catch(({ response }) => {
                        errorHTTPRequest();
                        console.error(response);
                    })
            }
        }
    </script>
{% endblock %}