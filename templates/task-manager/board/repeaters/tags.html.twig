{% for tag in tags %}
    <div class="board-tags-container">
        <div class="list-group-item">
            <div class="board-tag">
                <div class="row justify-content-between">
                    <div class="col-9">
                        <div class="row">
                            <div class="col-3 tag-name">
                                <span class="badge badge-{{ tag.color }}">{{ tag.name }}</span> 
                            </div>
                            <div class="col-9 tag-description">{{ tag.description }}</div>                    
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="tag-actions">
                            <a 
                                href="{{ path('admin_api_board_tag_edit', {
                                    id: tag.id
                                }) }}" 
                                class="link me-2"
                                onclick="editTag(event);"
                            >Modifier</a>
                            <a 
                                href="{{ path('admin_api_board_tag_delete', {
                                    id: tag.id
                                }) }}" 
                                class="link text-danger"
                                onclick="deleteTag(event);"
                            >Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="edit_tag_form_{{ tag.id }}"></div>
        </div>
    </div>
{% endfor %}