<section class="section" id="realisations">
    <section class="page-section">
        <div class="container-fluid container-xl">
            <div class="section-header">
                <h3 class="section-title">Mes Réalisations</h3> 
                <small class="section-subtitle">Les derniers projets sur lesquels j'ai travaillé</small>
                <hr>
            </div>
            <div class="section-content">
                <div class="row project-list my-5">
                    {% for project in projects %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card card-project">                                
                                    <img 
                                        src="{{ asset(project.mainImage.path) }}" 
                                        alt="Photo du projet" 
                                        srcset="{{ asset(project.mainImage.path) }}" 
                                        class="card-img-top"
                                    >
                                    <div class="card-body">
                                        <h5 class="card-link text-center">
                                            <a class="link" href="{{ path('project_show', {id: project.id, slug: project.slug}) }}">{{ project.name }}</a>
                                        </h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
</section>