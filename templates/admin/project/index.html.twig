{% extends "admin/layout.html.twig" %}

{% block main %}

    <div class="container-fluid" id="projects-list">
        <h1 class="mt-2 mb-3">
            Mes projets
        </h1>
        <div class="d-flex justify-content-end">
            <button 
                type="button" 
                class="btn btn-crm btn-sm" 
                data-bs-toggle="modal" 
                data-bs-target="#project-modal"
            >Ajouter un projet</button>
        </div>
        <div class="mt-2" id="project-table">
            <table class="table table-hover table-striped align-middle">
                <thead>
                    <tr>
                        <th scope="row">#</th>
                        <th scope="row">Nom</th>
                        <th scope="row">Status</th>
                        <th scope="row">Visibilit√©</th>
                        <th scope="row">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                        <tr data-project-index="{{ project.id }}">
                            <th scope="col">{{ project.id }}</th>
                            <td>{{ project.name }}</td>
                            <td> <span class="badge badge-crm">{{ project.state }}</span></td>
                            <td>{{ project.visibility }}</td>
                            <td>
                                <a 
                                    href="{{ path('admin_project_edit', {id: project.id}) }}" 
                                    class="btn btn-warning btn-sm"
                                >Modifier</a>
                                <a 
                                    href="{{ path('admin_project_delete', {id: project.id}) }}" 
                                    class="btn btn-danger btn-sm project-delete"
                                >Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
    </div>

    {% include "admin/project/modals/create-project.html.twig" %}

{% endblock %}

{% block js %}
    <script src="{{ asset('js/admin/project/index.js') }}"></script>
{% endblock %}

{% block css %}{% endblock %}